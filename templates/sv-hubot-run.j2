#!/bin/sh

exec 2>&1
export PATH={{ hubot_dir }}/node_modules/.bin:$PATH
cd {{ hubot_dir }}
exec chpst -u {{ hubot_user }} -U {{ hubot_user }} \
           -e "{{ hubot_secrets_dir }}"            \
           env HOME="{{ hubot_dir }}" bin/hubot --name {{ hubot_botname }} --adapter {{ hubot_adapter }}